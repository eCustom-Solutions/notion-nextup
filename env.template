# Notion API Configuration
# Get your API key from: https://www.notion.so/my-integrations
NOTION_API_KEY=your-notion-api-key-here

# Notion Database ID
# This is the ID of your Notion database (found in the URL)
# Example: https://www.notion.so/workspace/your-database-id?v=...
NOTION_DB_ID=your-database-id-here

# Objectives Database (optional, for objectiveâ†’tasks fanout)
# Example URL contains the DB id before the ?v=... parameter
# OBJECTIVES_DB_ID=your-objectives-db-id-here

# Webhook / Server Configuration
PORT=443
WEBHOOK_DEBOUNCE_MS=10000
LOG_LEVEL=info # info|debug|silent

# Rate Limiting (global)
GLOBAL_RPS=3
TOKEN_BUCKET_CAPACITY=3

# Intraday Projection (optional)
# Toggle to enable intraday work-window aware projection
# USE_INTRADAY=false
# Workday window (24h clock)
# WORKDAY_START_HOUR=8
# WORKDAY_END_HOUR=16
# TIMEZONE=America/Los_Angeles

# Safety & Run Mode
ENABLE_DATABASE_UPDATES=false  # default DRY-RUN; set to true for live writes
CONFIRM_LIVE=                  # set to ALL_USERS to allow live all-users harness

# Demo Mode (optional)
DEMO_USER_ID=
DEMO_USER_NAME=

# All-Users Harness (optional scoping)
USERS_FILTER=                  # e.g. (Alice|Bob)
MAX_USERS=0                    # 0 = no limit

# Optional: generic debug toggle
DEBUG=false